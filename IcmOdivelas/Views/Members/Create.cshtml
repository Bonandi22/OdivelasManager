@model Common.Models.Member

@{
    ViewData["Title"] = "Register";
}
<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/formCreate.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/IcmOdivelas.styles.css" asp-append-version="true" />
</head>

<body>

    <div class="container form">
        <div class="d-flex justify-content-center">
            <h1>Register</h1>
        </div><br />
        <form asp-action="Create" class="row">
            <div asp-validation-summary="ModelOnly" class="col-12 text-danger"></div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Name" for="validationServer01" class="form-label"></label>
                    <input asp-for="Name" type="text" class="form-control" id="validationServer01" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PhoneNumber" for="validationServer02" class="form-label"></label>
                    <input asp-for="PhoneNumber" type="text" class="form-control" id="validationServer02" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="BirthDate" for="validationServer03" class="form-label"></label>
                    <input asp-for="BirthDate" class="form-control" id="validationServer03" />
                    <span asp-validation-for="BirthDate" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Address" for="validationServer04" class="form-label"></label>
                    <input asp-for="Address" type="text" class="form-control" id="validationServer04" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="City" for="validationServer05" class="form-label"></label>
                    <input asp-for="City" type="text" class="form-control" id="validationServer05" />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CategoryId" class="form-label"></label>
                    <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId">
                        <option selected>Open this select menu</option>
                    </select>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Nacionality" for="validationServer06" class="form-label"></label>
                    <input asp-for="Nacionality" type="text" class="form-control" id="validationServer06" />
                    <span asp-validation-for="Nacionality" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Region" for="validationServer07" class="form-label"></label>
                    <input asp-for="Region" type="text" class="form-control" id="validationServer07" />
                    <span asp-validation-for="Region" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="form-check">
                        <input class="form-check-input" id="validationServer08" asp-for="Isbaptized" />
                        <label asp-for="Isbaptized" class="form-label" id="validationServer08"></label>
                    </div>
                </div>
            </div>
            <div class="col-md-6">

                <div class="form-group">
                    <label asp-for="GroupId" for="validationServer09" class="form-label"></label>
                    <select asp-for="GroupId" class="form-control" id="validationServer09" asp-items="ViewBag.GroupId">
                        <option selected>Open this select menu</option>
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="SituationId" for="validationServer10" class="form-label"></label>
                    <select asp-for="SituationId" class="form-control" id="validationServer10" asp-items="ViewBag.SituationId">
                        <option selected>Open this select menu</option>
                    </select>
                </div>
            </div>
            <div class="d-flex justify-content-center">
                <br />
                <button>
                    <div class="svg-wrapper-1">
                        <div class="svg-wrapper">
                            <svg height="24" width="24" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                <path d="M0 0h24v24H0z" fill="none"></path>
                                <path d="M1.946 9.315c-.522-.174-.527-.455.01-.634l19.087-6.362c.529-.176.832.12.684.638l-5.454 19.086c-.15.529-.455.547-.679.045L12 14l6-8-8 6-8.054-2.685z" fill="currentColor"></path>
                            </svg>
                        </div>
                    </div>
                    <span id="registerButton" type="submit" value="Create">Register</span>                   
                </button>        
            </div>
        </form>
    </div>
</body>


<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/Form.js" asp-append-version="true"></script>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }    
}